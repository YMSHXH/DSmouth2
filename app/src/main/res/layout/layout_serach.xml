<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

    <ImageView
        android:id="@+id/or_cord"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/or_cord"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/ed_find"/>

    <EditText
        android:id="@+id/ed_find"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="40dp"
        android:paddingLeft="45dp"
        android:textColorHint="@color/gray"
        android:hint="搜索"
        android:cursorVisible="false"
        android:background="@drawable/shape_find"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/or_cord"/>


    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/find"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="@+id/ed_find"
        app:layout_constraintBottom_toBottomOf="@+id/ed_find"
        app:layout_constraintLeft_toLeftOf="@+id/ed_find"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/microphone"
        android:layout_marginRight="15dp"
        app:layout_constraintTop_toTopOf="@+id/ed_find"
        app:layout_constraintBottom_toBottomOf="@+id/ed_find"
        app:layout_constraintRight_toRightOf="@+id/ed_find"/>


</android.support.constraint.ConstraintLayout>